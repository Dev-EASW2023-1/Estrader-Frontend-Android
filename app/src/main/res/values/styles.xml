<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CollapsingToolbarLayout Style 변경 -->
    <style name="expandedBarTextStyle">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 글꼴 일괄 적용 -->
    <style name="customTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/font_family</item>
    </style>
    <style name="customButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/font_family</item>
    </style>
    <style name="customEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/font_family</item>
    </style>
    <style name="customRadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/font_family</item>
    </style>
    <style name="customCheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <!-- AlertDialog Style 변경 -->
    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/AppTheme.AlertDialogTheme.WindowTitle</item> <!-- 제목 색깔 -->
        <item name="android:textColorPrimary">#000000</item> <!-- 내용 색깔 -->
        <item name="buttonBarButtonStyle">@style/AppTheme.AlertDialogTheme.Button</item> <!-- 확인, 취소 색깔 -->
    </style>
    <style name="AppTheme.AlertDialogTheme.Button" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/color_main2</item>
    </style>
    <style name="AppTheme.AlertDialogTheme.WindowTitle" parent="RtlOverlay.DialogWindowTitle.AppCompat">
        <item name="android:textColor">@color/color_main2</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="EditTextGreyStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/color_sub</item> <!-- unFocus 상태 밑줄 색 -->
        <item name="boxStrokeColor">@color/color_main</item> <!-- Focus 상태 밑줄 색. -->
        <item name="android:textCursorDrawable">@color/color_main</item> <!-- cursor 색. -->

        <item name="android:textColorHint">@color/color_sub</item> <!-- hint 색 -->
        <item name="hintTextColor">@color/color_main</item> <!-- floating hint 색 -->

        <item name="helperTextTextColor">@color/color_sub</item>
        <item name="errorTextColor">@color/color_main</item>
    </style>

    <style name="SlowBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/slow_slide_up</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/expandedBarTextStyle"
            app:contentScrim="@color/color_main"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:contentDescription="@string/property_photo"
                android:scaleType="centerCrop"
                android:src="@drawable/example"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:title="@string/property_name"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_back_resize" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:clipToPadding="false"
        android:scrollbarFadeDuration="0"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?attr/actionBarSize"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/agentdelegation_border"
                    android:padding="10dp"
                    android:text="매물관리번호 2020타경 28592"
                    android:textColor="#95A1AC"
                    android:textSize="@dimen/heading_size" />

                <TextView
                    android:id="@+id/tv_hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="다가구주택"
                    android:textColor="#000000"
                    android:textSize="@dimen/title_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hello2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대구광역시 중구 공평로8길 53-4"
                    android:textColor="#000000"
                    android:textSize="@dimen/heading_size" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_hello3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="상세정보"
                    android:textColor="#000000"
                    android:textSize="@dimen/title_size"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0.5"
                        android:layout_gravity="center_vertical"
                        android:text="소재지"
                        android:textColor="#000000"
                        android:textSize="@dimen/heading_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0.5"
                        android:layout_gravity="center_vertical"
                        android:text="철근콘크리트구조 (철근)콘크리트지붕 4층 다가구주택 1층 철근콘크리트구조 계단실 11.88㎡ 2층 철근콘크리트구조 4가구 113.68㎡ 2층 철근콘크리트구조 사무소 51.41㎡ 3층 철근콘크리트구조 6가구 160.05㎡ 4층 철근콘크리트구조 3가구 157.23㎡"
                        android:textColor="#000000"
                        android:textSize="@dimen/heading_size" />

                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#aaa" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0.5"
                        android:layout_gravity="center_vertical"
                        android:text="감정평가액 \n최저매각가격"
                        android:textColor="#000000"
                        android:textSize="@dimen/heading_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0.5"
                        android:layout_gravity="center_vertical"
                        android:text="1,489,129,980"
                        android:textColor="#000000"
                        android:textSize="@dimen/heading_size" />

                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#aaa" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0.5"
                        android:layout_gravity="center_vertical"
                        android:text="비고"
                        android:textColor="#000000"
                        android:textSize="@dimen/heading_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="0.5"
                        android:layout_gravity="center_vertical"
                        android:text="-일괄매각 -감정서에 의하면 본건 기호(가)1층 사무소 증축부분은 건물등기사항전부증명서 상 미등재된 상태로서 일반건축물대장과 상이하나, 물적동일성의 기준이 되는 건축물대장을 기준으로 1층 증축 부분(22.68㎡)을 정상적으로 평가하였으며 매각에 포함 "
                        android:textColor="#000000"
                        android:textSize="@dimen/heading_size" />

                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#aaa" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:id="@+id/confirm_button"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/awaitingbid_button"
                        android:backgroundTint="@color/color_main"
                        android:text="취소"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/subtitle_size" />

                    <android.widget.Button
                        android:id="@+id/confirm_button2"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/awaitingbid_button"
                        android:backgroundTint="@color/color_main"
                        android:text="대리위임"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/subtitle_size" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="구매확인"
        android:fontFamily="@font/nanumgothictitle"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumgothictext"
        android:text="정말 구매하시겠습니까?"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="right"
        android:orientation="horizontal">
        <android.widget.Button
        android:background="@drawable/awaitingbid_button"
        android:id="@+id/positive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="확인"
        android:onClick="positive_button"
        android:backgroundTint="#3f9efa"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />
        <android.widget.Button
        android:id="@+id/negative_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="취소"
        android:background="@drawable/awaitingbid_button"
        android:onClick="negative_button"
        android:backgroundTint="#3f9efa"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />
    </LinearLayout>
</LinearLayout>
